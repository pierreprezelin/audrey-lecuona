---
import { Image } from "astro:assets";

import Layout from "@layouts/Layout.astro";
import logo from "../assets/images/logo.svg";
import buttonToWorks from "../assets/images/button-to-works.svg";
import flowers from "../assets/images/flowers.webp";
import portfolio from "../assets/images/portfolio.svg";
---

<Layout title="Accueil">
	<div class="h-screen">
		<h1>
			<Image
				src={logo}
				alt="Audrey Lecuona"
				fetchpriority="high"
				loading="eager"
				class="absolute left-1/2 top-1/4 z-30 w-[80%] -translate-x-1/2 -translate-y-3/4 sm:w-2/3 md:top-1/2 md:-translate-y-3/4"
			/>
			<span class="sr-only">Audrey Lecuona</span>
		</h1>
		<a
			href="/works"
			class="group"
		>
			<Image
				src={buttonToWorks}
				alt="Voir les rÃ©alisations"
				fetchpriority="high"
				loading="eager"
				class="absolute left-1/2 top-1/2 z-30 h-24 w-24 -translate-x-1/2 -translate-y-1/2 transition-all group-hover:scale-95 group-hover:opacity-75 md:bottom-[5%] md:top-auto md:h-32 md:w-32 md:-translate-y-0"
			/>
		</a>
		<Image
			src={flowers}
			alt=""
			fetchpriority="high"
			loading="eager"
			class="absolute bottom-0 right-0 z-10 w-full max-w-max sm:bottom-[10%] sm:w-2/3 md:bottom-[12.5%] md:w-1/2 lg:bottom-[15%] lg:w-1/3"
		/>
		<Image
			src={portfolio}
			alt=""
			fetchpriority="high"
			loading="eager"
			class="absolute -left-[5%] -top-[5%] z-20 md:top-[10%]"
		/>
	</div>
</Layout>
